<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<%= link_to "Log out", destroy_user_session_path, 'data-turbo-method': :delete %>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", category_deals_path(category.id) %>
      <%= button_to "Remove", category_path(category), method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New category", new_category_path %>
