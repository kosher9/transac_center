<div class="container-log">
  <h2>Transac center</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form_log_in") do |f| %>
    <div class="field">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div>
      <div class="button-link">
        <%= f.submit "Log in" %>
      </div>
      <div class="button-link">
        <%= link_to 'Sign up', new_user_registration_path, method: :get %>
      </div>
    </div>
  <% end %>
</div>